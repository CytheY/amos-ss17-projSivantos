<Window x:Class="TestmachineFrontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestmachineFrontend"
        mc:Ignorable="d"
        Title="{Binding DeviceName}" Height="500" Width="550"
        MaxHeight="500" MaxWidth="550">
    <Grid Height="472" VerticalAlignment="Top">
        <TabControl x:Name="tabControl" HorizontalAlignment="Left"
                    Height="337" Margin="14,10,0,0"
                    VerticalAlignment="Top" Width="513">
            <TabItem Header="Detect">
                <Grid Background="AliceBlue">
                    <!--list of available devices-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="5*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90*"/>
                        <ColumnDefinition Width="66*"/>
                        <ColumnDefinition Width="99*"/>
                        <ColumnDefinition Width="254*"/>
                    </Grid.ColumnDefinitions>

                    <!--TextBox for entering the IP-Adress of a device-->
                    <TextBox Grid.Column="3" ToolTip="Enter IP-Adress here"
                 Margin="38.6,30,33,16.8" FontSize="18"
                 TextAlignment="Center"
                 Text="{Binding IPaddress}"/>
                    <!--Button for establishing connection to device-->
                    <Button Grid.Column="3" x:Name="connectIP_button"
                  Margin="38.6,3.2,34,189.6" Click="connectIP_button_Click" Grid.Row="1">Connect</Button>
                    <ListView x:Name="listView" HorizontalAlignment="Left"
                              Height="267" Margin="24,31,0,0" VerticalAlignment="Top"
                              Width="204" Grid.RowSpan="2" Grid.ColumnSpan="3">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="IP-Address" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Grid.Column="3" x:Name="readPin_button"
                        Margin="62.6,102.2,133,91.6"
                        Content="Read pin" Grid.Row="1" Click="readPin_button_Click"/>
                    <Button Grid.Column="3" x:Name="writePin_button"
                        Margin="125.6,102.2,69,91.6"
                        Content="Write pin" Grid.Row="1" Click="writePin_button_Click"/>
                    <TextBox Grid.Column="3" Margin="24.6,102.2,196,91.6"
                             Grid.Row="1" Text="{Binding PinID}"></TextBox>
                    <Button Grid.Column="3" x:Name="reset_button"
                        Margin="189.6,102.2,10,91.6"
                        Content="Reset" Grid.Row="1" Click="reset_button_Click"/>

                    <Button Grid.Column="3" x:Name="ledON_button"
                        Margin="38.6,45.2,157,148.6"
                        Content="LED ON" Grid.Row="1"   Click="ledON_button_Click"  />
                    <Button Grid.Column="3" x:Name="ledOFF_button"
                        Margin="101.6,45.2,93,148.6"
                        Content="LED OFF" Grid.Row="1"  Click="ledOFF_button_Click" />

                    <Button Grid.Column="3" x:Name="HI_ON"
                        Margin="120.6,174.2,74,19.6"
                        Content="HI ON" Grid.Row="1"  Click="HI_ON_Click" RenderTransformOrigin="1.369,-0.363" />

                    <Slider x:Name="setVolume_Slider"
                            Maximum="127"
                            Minimum="0"
                            ValueChanged="setVolume_ValueChanged"
                            SizeChanged="setVolume_SizeChanged"
                            Margin="98,146.2,158,51.6"
                            Grid.Column="2"
                            Grid.Row="1" RenderTransformOrigin="0.495,1.017" Grid.ColumnSpan="2"/>

                    <Button Grid.Column="3" x:Name="sendVolumeLevel_Button"
                        Margin="164.6,142.2,10,51.6"
                        Content="Set Volume" Grid.Row="1"  Click="sendVolumeLevel_Button_Click"  RenderTransformOrigin="1.369,-0.363" />

                    <Button Grid.Column="3" x:Name="HI_OFF"
                        Margin="184.6,174.2,10,19.6"
                        Content="HI OFF" Grid.Row="1"  Click="HI_OFF_Click" RenderTransformOrigin="0.475,-0.185" />
                    <Button x:Name="connect_Pins" Content="Mux55" Grid.Column="3" HorizontalAlignment="Left" Margin="165,45,0,0" Grid.Row="1"
                            VerticalAlignment="Top" Width="58" Height="27" Click="connect_Pins_Click"/>

                </Grid>
            </TabItem>

            <TabItem Header="User Controls">
                <Grid Background="AliceBlue" Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="107*"/>
                        <RowDefinition Height="102*"/>
                        <RowDefinition Height="112*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Margin="25,23,428,58.5"><Run Text="Buttons"/></TextBlock>
                    <Button Grid.Row="0"  Margin="108,17,339,58.5" Content="PB"
                            IsEnabled="False"/>
                    <Button Grid.Row="0"  Margin="195,17,256,58.5" Content="RSD"/>
                    <Button Grid.Row="0"  Margin="278,17,173,58.5" Content="RSU"/>
                    <CheckBox x:Name="checkBox" HorizontalAlignment="Left"
                              Margin="369,23,0,0" VerticalAlignment="Top" Height="15" Width="16"/>
                    <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="31"
                             Margin="395,17,0,0" TextWrapping="Wrap" Text="{Binding //TODO}"
                             VerticalAlignment="Top" Width="59" IsEnabled="False"/>
                    <TextBlock Grid.Row="0" Margin="468,23,6,58.5"><Run Text="ms"/></TextBlock>
                    <RadioButton x:Name="radioButton1" HorizontalAlignment="Left"
                                 Margin="126,63,0,0" VerticalAlignment="Top"
                                 IsChecked="True" IsEnabled="False" Height="14" Width="15"/>
                    <RadioButton x:Name="radioButton2" HorizontalAlignment="Left"
                        Margin="211,63,0,0" VerticalAlignment="Top" Height="14" Width="15"/>
                    <RadioButton x:Name="radioButton3" HorizontalAlignment="Left"
                        Margin="293,63,0,0" VerticalAlignment="Top" IsChecked="True" Height="14" Width="15"/>
                    <Button Grid.Row="0"  Margin="360,63,74,7.5" Content="Combi"
                        IsEnabled="False"/>

                    <TextBlock Grid.Row="1" Margin="25,3.5,401,71.5"><Run Text="Stop End VC"/></TextBlock>
                    <Slider Name="vcSlider" Thumb.DragStarted="vcSlider_DragStarted"
                        Thumb.DragCompleted="vcSlider_DragCompleted"
                        ValueChanged="vcSlider_ValueChanged" Margin="113,1.5,125,73.5"
                            Background="AliceBlue" Grid.Row="1"/>
                    <Slider Grid.Row="2" x:Name="soundSlider" Thumb.DragStarted="soundSlider_DragStarted"
                        Thumb.DragCompleted="soundSlider_DragCompleted"
                        ValueChanged="soundSlider_ValueChanged" Margin="196,63.5,125,10"
                        Background="AliceBlue"/>
                    <TextBlock Grid.Row="1" Margin="25,55.5,401,17.5"><Run Text="Endless VC"/></TextBlock>
                    <TextBlock Grid.Row="1" Margin="138,31.5,329,40.5"><Run Text="Down"/></TextBlock>
                    <TextBlock Grid.Row="1" Margin="223,31.5,252,40.5"><Run Text="Up"/></TextBlock>
                    <TextBlock Grid.Row="1" Margin="315,31.5,145,40.5"><Run Text="Ticks"/></TextBlock>
                    <RadioButton x:Name="radioButton4" HorizontalAlignment="Left"
                        Margin="144,63.5,0,0" VerticalAlignment="Top" IsChecked="True" Grid.Row="1" Height="14" Width="15"/>
                    <RadioButton x:Name="radioButton5" HorizontalAlignment="Left"
                        Margin="221,63.5,0,0" VerticalAlignment="Top" IsChecked="False"
                                 Grid.Row="1" RenderTransformOrigin="4.78,0.614" Height="14" Width="15"/>
                    <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="28"
                        Margin="301,59.5,0,0" TextWrapping="Wrap" Text="{Binding //TODO}"
                        VerticalAlignment="Top" Width="47" IsEnabled="False" Grid.Row="1"/>
                    <Button Grid.Row="1"  Margin="399,59.5,48,7.5" Content="Turn"
                        IsEnabled="False"/>
                    <TextBlock Grid.Row="1" Margin="411,6.5,63,75.5"><Run Text="0"/></TextBlock>
                    <TextBlock Grid.Row="2" Margin="411,66.5,63,15"><Run Text="0"/></TextBlock>
                    <Ellipse Fill="White" HorizontalAlignment="Left" Height="40"
                             Margin="29,2.5,0,0" Grid.Row="2" Stroke="Black"
                             VerticalAlignment="Top" Width="40"/>
                    <Ellipse Fill="White" HorizontalAlignment="Left" Height="40"
                        Margin="81,2.5,0,0" Grid.Row="2" Stroke="Black"
                        VerticalAlignment="Top" Width="40"/>
                    <Ellipse Fill="AliceBlue" HorizontalAlignment="Left" Height="40"
                        Margin="131,2.5,0,0" Grid.Row="2" Stroke="Black"
                        VerticalAlignment="Top" Width="40"/>
                    <TextBlock Grid.Row="2" Margin="39,47.5,441,33"><Run Text="I/O"/></TextBlock>
                    <TextBlock Grid.Row="2" Margin="86,47.5,388,33"><Run Text="LED"/></TextBlock>
                    <TextBlock Grid.Row="2" Margin="135,47.5,326,33"><Run Text="Sound"/></TextBlock>
                    <TextBlock Grid.Row="2" Margin="45,72.5,416,8"><Run Text="Power"/></TextBlock>
                    <CheckBox x:Name="checkBox2" HorizontalAlignment="Left"
                        Margin="131,76.5,0,0" VerticalAlignment="Top" Grid.Row="2" Height="15" Width="16"/>
                    <TextBlock Grid.Row="2" Margin="211,21.5,254,64"><Run Text="Beeps"/></TextBlock>
                    <CheckBox x:Name="checkBox3" HorizontalAlignment="Left"
                        Margin="261,24.5,0,0" VerticalAlignment="Top" Grid.Row="2" Height="15" Width="16"/>
                    <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="28"
                        Margin="301,21.5,0,0" TextWrapping="Wrap" Text="{Binding //TODO}"
                        VerticalAlignment="Top" Width="47" IsEnabled="False" Grid.Row="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="LCD Control">


                <StackPanel Name="Panel1" >
                    <Button x:Name="reconnectI2C" HorizontalAlignment="Center" Margin="210,5,202,0" Click="reconnectI2C_Click" Content="Reset" Width="96"/>

                    <Button x:Name="toggleBacklightButton" HorizontalAlignment="Center" Margin="210,5,202,0" Click="toggleBacklightButton_Click" Content="Toggle Backlight" Width="96"/>
                    <TextBlock Name="scrollSliderTextBlock" FontSize="16" Margin="411,0,10,0" >Scroll Speed</TextBlock>
                    <Slider x:Name="scrollSlider" Margin="411,0,10,0" ValueChanged="scrollSlider_ValueChanged"/>

                    <TextBlock Name="displayEingabeTextBlock" Margin="25,0,0,0">Eingabe für Display</TextBlock>
                    <TextBox Name="displayEingabeTextBox" Margin="25,5,10,0" />
                    <Button x:Name="sendToLcdButton" Margin="411,0,10,0" Click="sendToLcdButton_Click" Content="Send"/>
                    <Button x:Name="cancelButton" Margin="411,0,10,0" Click="cancelButton_Click" Content="Cancel"/>
                    <Button Name="sample16Button"  Margin="25,0,272,0" Click="sample16Button_Click">SampleText 16 Chars</Button>
                    <Button Name="sample32Button"  Margin="25,0,272,0" Click="sample32Button_Click">SampleText 32 Chars</Button>
                    <Button Name="sampleGT32Button"  Margin="25,0,272,0" Click="sampleGT32Button_Click">SampleText > 32 Chars</Button>
                </StackPanel>

            </TabItem>
        </TabControl>
        <ListView x:Name="debug" HorizontalAlignment="Left"
                              Height="95" Margin="14,352,0,0"
                  VerticalAlignment="Top" Width="513">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" Header="origin" DisplayMemberBinding="{Binding Path=origin}" />
                    <GridViewColumn Width="450" Header="text" DisplayMemberBinding="{Binding Path=text}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
